    "version": "0.2.0",
    "configurations": [
        {
          "name": "Python: Home Assistant",
          "type": "debugpy",
          "request": "launch",
          "module": "homeassistant",
          "args": [
              "--config",
              "${workspaceFolder}/config"
          ],
          "justMyCode": false,
          "env": {
              "PYTHONPATH": "${PYTHONPATH}:${workspaceFolder}/custom_components"
          },
          "preLaunchTask": "Prepare Home Assistant Config"
        }
    ]
}
